<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>

    {{> meta}}

    <title>Leaderboard | Eight Ball</title>

    {{> css}}

</head>

<body>

    {{> navbar active_leaderboard=true}}

    <div class="container">
        {{> flash}}

        <div class="jumbotron">
            <h1 class="display-1 text-truncate mw-100">Leaderboard</h1>
        </div>

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    {{!-- <th scope="col">ID</th> --}}
                    <th scope="col">Username</th>
                    <th scope="col">Name</th>
                    <th scope="col">Wins</th>
                    {{!-- <th scope="col">Losses</th> --}}
                    <th scope="col">Games Played</th>
                    <th scope="col">Win Rate</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr class="{{#if this.self}}table-active{{/if}} {{#if (eq this.position 1)}}gold{{else if (eq this.position 2)}}silver{{else if (eq this.position 3)}}bronze{{/if}}"
                    onclick="window.location='/profile/{{this.id}}'" style="cursor:pointer">
                    <th scope="row">{{this.position}}</th>
                    {{!-- <td>{{this.id}}</td> --}}
                    <td class="{{userColor this.id}}">{{this.username}}</td>
                    <td>{{this.firstname}} {{this.lastname}}</td>
                    <td>{{this.wins}}</td>
                    {{!-- <td>{{this.losses}}</td> --}}
                    <td>{{this.gamesPlayed}}</td>
                    <td>{{this.winRate}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>

    {{> js}}

</body>

</html>