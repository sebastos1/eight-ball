<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    {{> meta}}
    <title>Leaderboard | Eight Ball</title>
    {{> css}}
</head>

<body>
    {{> navbar active_leaderboard=true}}
    <div class="container">
        {{> flash}}
        <h1 class="display-4 text-truncate mb-4">Leaderboard</h1>
        <div class="list-group">
            <div class="list-group-item list-group-item-secondary">
                <div class="lbd-grid font-weight-bold">
                    <div>#</div>
                    <div></div>
                    <div>Rank</div>
                    <div>Rating</div>
                    <div>Wins</div>
                    <div>Games</div>
                    <div>Win Rate</div>
                </div>
            </div>
            {{#each users}}
            <div class="list-group-item list-group-item-action 
            {{#if this.self}}
            bg-dark-subtle
            {{/if}}
            {{#if (eq this.position 1)}}
            gold
            {{else if (eq this.position 2)}}
            silver
            {{else if (eq this.position 3)}}
            bronze
            {{/if}}" onclick="window.location='/profile/{{this.id}}'" style="cursor:pointer">
                <div class="lbd-grid">
                    <div>{{this.position}}</div>
                    <div class="{{userColor this.id}}" style="color:{{userSolidColor this.username}}">{{userFlag
                        this.country}} {{this.username}}
                    </div>
                    {{#if this.rating}}
                    <div class="{{getRankColor this.rating}}">{{getRank this.rating}}</div>
                    <div class="shimmer">{{this.rating}}</div>
                    {{else}}
                    <div>Unranked</div>
                    <div>-</div>
                    {{/if}}
                    <div>{{this.wins}}</div>
                    <div>{{this.gamesPlayed}}</div>
                    <div>{{this.winRate}}</div>
                </div>
            </div>
            {{else}}
            <div class="d-flex justify-content-center mt-3">Nothing here yet!</div>
            {{/each}}
        </div>
    </div>
    {{> js}}
</body>

</html>