<div class="card bg-dark border-secondary mx-auto" style="max-width: 400px;">
    <div class="card-body p-3">
        {{#each ranks}}
        <div class="d-flex justify-content-between align-items-center py-1">
            <div class="d-flex align-items-center">
                <img src="/img/ranks/{{this.imgPath}}" alt="{{this.name}} icon" class="me-3"
                    style="width: 40px; height: 40px;">
                <h6 class="mb-0 {{this.cssClass}}">{{this.name}}</h6>
            </div>
            <span class="text-muted">{{this.minRating}}{{#if this.maxRating}}-{{this.maxRating}}{{else}}+{{/if}}</span>
        </div>
        {{/each}}
    </div>
</div>

<div class="text-center mt-4">
    <a href="/leaderboard" class="btn btn-outline-primary">
        ‚Üê Back to Leaderboard
    </a>
</div>