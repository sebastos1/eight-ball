<div class="mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="display-4 text-center mb-5">Rank Legend</h1>

            <div class="card bg-dark border-secondary">
                <div class="card-body p-4">
                    <div class="row g-3">
                        {{#each ranks}}
                        <div class="col-12">
                            <div
                                class="d-flex align-items-center justify-content-between p-3 border border-secondary rounded">
                                <div class="d-flex align-items-center">
                                    <!-- Placeholder for rank icon -->
                                    <div class="rank-icon-placeholder me-3"
                                        style="width: 32px; height: 32px; background: {{this.color}}; border-radius: 4px; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 12px;">
                                        {{this.shortName}}
                                    </div>

                                    <div>
                                        <h5 class="mb-1 {{this.cssClass}}">{{this.name}}</h5>
                                        <small class="text-muted">{{this.description}}</small>
                                    </div>
                                </div>

                                <div class="text-end">
                                    <div class="fw-bold">{{this.minRating}}{{#if this.maxRating}} -
                                        {{this.maxRating}}{{else}}+{{/if}}</div>
                                    <small class="text-muted">rating</small>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="/leaderboard" class="btn btn-outline-primary">
                    ‚Üê Back to Leaderboard
                </a>
            </div>
        </div>
    </div>
</div>