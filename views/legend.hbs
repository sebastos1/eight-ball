<div class="card bg-dark border-secondary">
    <div class="card-body p-4">
        <div class="row g-3">
            {{#each ranks}}
                <div
                    class="d-flex align-items-center justify-content-between p-3 border border-secondary rounded">
                    <div class="d-flex align-items-center">
                        <img src="/img/ranks/{{this.imgPath}}" alt="{{this.name}} icon" class="rank-icon me-3" style="width: 32px; height: 32px;">

                        <div>
                            <h5 class="mb-1 {{this.cssClass}}">{{this.name}}</h5>
                            <small class="text-muted">{{this.description}}</small>
                        </div>
                    </div>

                    <div class="text-end">
                        <div class="fw-bold">{{this.minRating}}{{#if this.maxRating}} -
                            {{this.maxRating}}{{else}}+{{/if}}</div>
                        <small class="text-muted">rating</small>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a href="/leaderboard" class="btn btn-outline-primary">
        ‚Üê Back to Leaderboard
    </a>
</div>